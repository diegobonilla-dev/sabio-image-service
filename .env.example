# Server Configuration
NODE_ENV=production
PORT=3002
PUBLIC_URL=https://images.tudominio.com

# Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/webp,image/gif
DEFAULT_QUALITY=80

# Storage
UPLOAD_DIR=./uploads

# Security
API_KEY=your-super-secret-api-key-here-change-in-production
JWT_SECRET=your-jwt-secret-for-future-dashboard

# CORS (comma-separated)
ALLOWED_ORIGINS=https://tudominio.com,https://api.tudominio.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
